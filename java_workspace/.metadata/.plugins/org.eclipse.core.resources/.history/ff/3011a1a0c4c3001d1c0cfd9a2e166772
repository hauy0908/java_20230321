package day15;

import java.util.Scanner;

public class SaleMain {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		SaleManager sm = new SaleManager();
		int menu = -1;
		do {
			sm.printMenu();
			menu = scan.nextInt();
			
			switch (menu) {
			case 1 : sm.add(scan); break;
			case 2 : sm.printProduct(); break;
			case 3 :  break;
			case 4 :  break;
			case 5 :  break;			
			default:
				
			}
					
			
		}while(menu!=5);
		
	}

}
